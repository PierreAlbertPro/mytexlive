\NeedsTeXFormat{LaTeX2e}[1999/01/01]
\ProvidesPackage{my}[2011/12/08]

\RequirePackage{ltxcmds}
\RequirePackage{xkeyval}
\RequirePackage{etoolbox}
\RequirePackage{multido}
\RequirePackage{suffix}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%% Declare package options %%
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% In case of unknown options
\DeclareOptionX*{%
	\PackageWarning{my}{Unknown option `\CurrentOption'}%
}

\ProcessOptionsX[my]

%% Options to pass to packages
\PassOptionsToPackage{greek,german,english,french}{babel}

%% Packages to call
% About characters encoding
\RequirePackage[utf8]{inputenc}
% About fonts
\RequirePackage[T1]{fontenc}
% Latin modern fonts offers more choices
% WARNING: there is not bold small caps font
\RequirePackage{lmodern}
% Add bold fonts for TT and small-caps for Computer Modern
% WARNING: Not compatible with Latin Modern ('lmodern' package)
\RequirePackage{bold-extra}
% About language
\RequirePackage{babel}
% Only for number printing
\RequirePackage{numprint}
% Add American Mathematical Society extension
\RequirePackage{amsmath}
% About links in the final PDF document
\ltx@ifpackageloaded{hyperref}{}{
	\RequirePackage[dvips]{hyperref}
}

%%%%%%%%%%%%%%%%%%%%%%%
%% New configuration %%
%%%%%%%%%%%%%%%%%%%%%%%
% Configuration of hyperref package
\hypersetup{%
	breaklinks=true,%
	citecolor=green,%
	colorlinks=true,%
	filecolor=magenta,%
	hypertexnames=true,%
	linkcolor=gray,%
	naturalnames=true,%
	nesting=false,% Does not compile with 'true'
	pageanchor=true,%
	pdfnewwindow=true,%
	pdfcenterwindow=true,%
	pdfdisplaydoctitle=true,%
	pdffitwindow=true,%
	pdfhighlight=/I,%
	pdfnonfullscreenpagemode=UseOutlines,%
	pdfpagelabels=true,%
	pdfpagelayout=OneColumn,%
	pdfpagemode=UseOutlines,%
	pdfstartview={FitH},%
	%pdfview={FitB},% Should not be used to have correct links
	unicode=true,%
	urlcolor=red%
}%
% Substitute Computer Modern to Latin Modern for bold small caps
\DeclareFontSubstitution{T1}{cmr}{bx}{sc}
% Define paragraphs spacing
\setlength{\parindent}{0cm}
\setlength{\parskip}{1ex plus 0.5ex minus 0.2ex}

