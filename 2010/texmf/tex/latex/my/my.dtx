% \begin{macro}{\myname}
% This macro use the \xpackage{mfirstuc} package to always have the first 
%letter of family name upper case. Moreover, \cs{MakeLowercase} and 
%\cs{MakeUppercase} are used to be sure of the case of family names.
%    \begin{macrocode}
\newrobustcmd{\myname}[2][]{%
  \iflanguage{french}{%
    \textsc{%
      \ifstrempty{#1}%
        {%
        }{%
          \MakeLowercase{#1}\ %
        }%
      \makefirstuc{\MakeLowercase{#2}}%
    }%
  }{%
    \ifstrempty{#1}%
      {%
      }{%
        \MakeLowercase{#1}\ %
      }%
    \MakeUppercase{#2}%
  }%
}
%    \end{macrocode}
% \end{macro}
