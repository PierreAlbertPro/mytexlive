% \begin{macro}{\mynum}
% This macro use the \cs{numprint} macro from the \xpackage{numprint} package.
%    \begin{macrocode}
\newrobustcmd{\mynum}[2][]{%
  \ifstrempty{#1}{%
    \numprint{#2}%
  }{%
    \numprint[#1]{#2}%
  }%
}
